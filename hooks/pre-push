#!/bin/bash
# SPDX-License-Identifier: PMPL-1.0-or-later
# cicd-hyper-a Pre-Push Hook
# Final security checks before pushing

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}cicd-hyper-a pre-push checks${NC}"

# Get the range of commits being pushed
while read local_ref local_sha remote_ref remote_sha; do
    if [ "$local_sha" = "0000000000000000000000000000000000000000" ]; then
        # Branch being deleted
        continue
    fi

    if [ "$remote_sha" = "0000000000000000000000000000000000000000" ]; then
        # New branch
        range="$local_sha"
    else
        range="$remote_sha..$local_sha"
    fi

    # Get files changed in the push
    FILES=$(git diff --name-only "$range" 2>/dev/null || echo "")

    if [ -z "$FILES" ]; then
        continue
    fi

    ERRORS=0

    # ============================================================
    # PREVENT FORCE PUSH TO MAIN
    # ============================================================

    if [[ "$remote_ref" == "refs/heads/main" ]] || [[ "$remote_ref" == "refs/heads/master" ]]; then
        # Check if this is a force push
        if ! git merge-base --is-ancestor "$remote_sha" "$local_sha" 2>/dev/null; then
            if [ "$remote_sha" != "0000000000000000000000000000000000000000" ]; then
                echo -e "${RED}ERROR: Force push to main/master branch not allowed${NC}"
                ERRORS=$((ERRORS + 1))
            fi
        fi
    fi

    # ============================================================
    # LARGE FILE CHECK
    # ============================================================

    MAX_SIZE=10485760  # 10MB
    for file in $FILES; do
        if [ -f "$file" ]; then
            size=$(wc -c < "$file" 2>/dev/null || echo 0)
            if [ "$size" -gt "$MAX_SIZE" ]; then
                echo -e "${RED}ERROR: File $file exceeds 10MB limit${NC}"
                echo "Use Git LFS for large files"
                ERRORS=$((ERRORS + 1))
            fi
        fi
    done

    # ============================================================
    # CREDENTIAL SCAN
    # ============================================================

    for file in $FILES; do
        if [ -f "$file" ]; then
            # Skip binary files
            if file "$file" | grep -q "binary"; then
                continue
            fi

            # Deep secret scan
            if grep -E '-----BEGIN (RSA |DSA |EC |OPENSSH )?PRIVATE KEY-----' "$file" > /dev/null 2>&1; then
                echo -e "${RED}ERROR: Private key detected in $file${NC}"
                ERRORS=$((ERRORS + 1))
            fi

            # Check for common credential files
            if [[ "$file" =~ (\.env|\.netrc|credentials\.json|secrets\.ya?ml)$ ]]; then
                echo -e "${RED}ERROR: Credential file detected: $file${NC}"
                echo "Add to .gitignore instead"
                ERRORS=$((ERRORS + 1))
            fi
        fi
    done

    # ============================================================
    # WORKFLOW VALIDATION
    # ============================================================

    WORKFLOW_FILES=$(echo "$FILES" | grep -E '\.github/workflows/.*\.ya?ml$' || true)
    for wf in $WORKFLOW_FILES; do
        if [ -f "$wf" ]; then
            # Validate YAML syntax
            if command -v yq &> /dev/null; then
                if ! yq eval '.' "$wf" > /dev/null 2>&1; then
                    echo -e "${RED}ERROR: Invalid YAML syntax in $wf${NC}"
                    ERRORS=$((ERRORS + 1))
                fi
            fi

            # Check for dangerous workflow patterns
            if grep -E 'pull_request_target.*checkout.*head' "$wf" > /dev/null 2>&1; then
                echo -e "${YELLOW}WARNING: Potentially dangerous pull_request_target pattern in $wf${NC}"
            fi
        fi
    done

    # ============================================================
    # RESULT
    # ============================================================

    if [ $ERRORS -gt 0 ]; then
        echo -e "${RED}Pre-push checks failed with $ERRORS error(s)${NC}"
        echo "Fix the issues above or use 'git push --no-verify' to bypass (not recommended)"
        exit 1
    fi
done

echo -e "${GREEN}All pre-push checks passed${NC}"
exit 0
